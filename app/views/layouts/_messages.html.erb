<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert-box <%= name.to_s == 'notice' ? 'success' : 'alert' %>">
      <%= content_tag :div, msg %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
<% end %>
<% if flash.count > 0 %>
  <script>
    $('.close').on('click', function(){
      $(this).parent('.alert').remove();
    });
  </script>
<% end %>