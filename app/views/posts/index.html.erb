<div class="post-card">
<h1>All posts</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% Category.walk_tree do |cat, level| %>
      <% if cat.posts.empty? %>
        <tr>
          <td><%= "#{'- '*level}#{cat.name}" %></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
      <% cat.posts.each do |post| %>
        <tr>
          <td><%= "#{'-  '*level}#{cat.name}" %></td>
          <td><%= link_to post.title, post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
        </tr>
      <% end %>
    <% end %>
    <% @posts.each do |post| %>
      <% if post.category.nil? %>
        <tr>
          <td>Uncategorized</td>
          <td><%= link_to post.title, post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
</div>