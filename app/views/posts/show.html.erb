<div class="display-post">

  <h1>
    <%= @post.title %>
  </h1>

  <div class="post-body">
    <% if @post.is_single_image and @post.file_assets.size > 0 %>
      <img src="<%= dev_safe_url(@post.file_assets.first.content.url) %>" />
    <% end %>
    <% if @post.body != @post.title %>
      <% if @post.is_single_image %>
        <div class="caption"><%=raw @post.body %></div>
      <% else %>
        <%=raw @post.body %>
      <% end %>
    <% end %>
  </div>
</div>