<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <% if @post.category.nil? %>
    Uncategorized
  <% else %>
    <%= @post.category.name %>
  <% end %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Published at:</strong>
  <%= @post.published_at %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
