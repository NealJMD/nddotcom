<% if not defined? title_link then title_link = true end %>
<div class="post-card">
  <% if post.is_single_image and post.image_assets.size > 0 %>
    <img src="<%= dev_safe_url(post.image_assets.first.content.url) %>" />
  <% end %>

  <div class="post-body">
    <% if title_link %>
      <%= link_to category_clean_post_path(post.category, post) do %>
        <h1>
          <%= post.title %>
        </h1>
      <% end %>
    <% else %>
      <h1>
        <%= post.title %>
      </h1>
    <% end %>

    <% if post.root_category.name.downcase == BLOG_CATEGORY_NAME.downcase %>
      <div class="published-at">
        Published on <%= post.published_at.strftime("%B %d, %Y") %>
      </div>
    <% end %>

    <% if post.body != post.title %>
      <% if post.is_single_image %>
        <div class="caption"><%=raw post.body %></div>
      <% else %>
        <%=raw post.body %>
      <% end %>
    <% end %>
  </div>
</div>
